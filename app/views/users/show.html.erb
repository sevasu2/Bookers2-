<div class="container top">

		<p style= "color: #008000;">
 			<%= flash[:success]  %>
		</p>

	<div class="row">
		<div class="col-md-3">
         <%= render 'users/list', book: @book %>
        </div>

		<div class="col-md-9">
			<h2>Books</h2>
			<table class="table">
					<thead>
						<tr>
							<th class="col-xs-3">
							</th class="col-xs-4.5">
							<th>
							Title
							</th>
							<th class="col-xs-4.5">
							Opinion
							</th>
						</tr>
					</thead>
				<tbody>
					<% @user.books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", style: "width: 40px; height: 40px;" %>
						</td>
						<td>
							<%= link_to book.title, book_path(book),class: "book_#{book.id}" %>
						</td>
						<td>
							<%= book.opinion %>
						</td>
					</tr>
					<% end %>
				</tbody>
		</table>
    </div>
 </div>
</div>
