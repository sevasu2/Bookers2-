<div class="container top">

		<p style= "color: green;">
 			<%= flash[:success]  %>
		</p>

	<div class="row">
		<div class="col-sm-3">
			<h2>User info</h2>
		<% if @user == current_user %>
			<%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
			<table class="table">
				<div  class="row">
					<tbody>
						<tr>
							<td class="labels col-xs-4">
								name
							</td>
							<td class="labels col-xs-8">
								<%= current_user.name %>
							</td>
						</tr>
						<tr>
							<td class="labels col-xs-4">
								introduction
							</td>
							<td class="labels col-xs-8">
								<%= current_user.introduction %>
							</td>
						</tr>
					</tbody>
				</div>
			</table>
			<div class="row">
				<% if @user == current_user %>
			<%= link_to "", edit_user_path(@user), class: "btn btn-default btn-block glyphicon glyphicon-wrench edit_user_#{@user}" %>
			   <% end %>
			</div>

		<% else %>

			<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
			<table class="table">
				<div  class="row">
					<tbody>
						<tr>
							<td class="labels col-xs-4">
							name
							</td>
							<td class="labels col-xs-8">
							<%= @user.name %>
							</td>
						</tr>
						<tr>
							<td class="labels col-xs-4">
						    introduction
							</td>
							<td class="labels col-xs-8">
							<%= @user.introduction %>
							</td>
						</tr>
					</tbody>
				</div>
			</table>
			<div class="row">
			<%= link_to "", books_path, class: "btn btn-default btn-block glyphicon glyphicon-wrench edit_user_#{@user}" %>
			</div>

		<% end %>

<%= render 'users/list', book: @book %>

		<div class="col-sm-9">
			<h2>Books</h2>
			<table class="table">
				<div class="row">
					<thead>
						<tr>
							<th class="col-xs-3">
							</th class="col-xs-4.5">
							<th>
							Title
							</th>
							<th class="col-xs-4.5">
							Opinion
							</th>
						</tr>
					</thead>
				<tbody>
					<% @user.books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", style: "width: 40px; height: 40px;" %>
						</td>
						<td>
							<%= link_to book.title, book_path(book),class: "book_#{book}" %>
						</td>
						<td>
							<%= book.opinion %>
						</td>
					</tr>
					<% end %>
				</tbody>
				</div>
			</table>
		</div>
	</div>
</div>
