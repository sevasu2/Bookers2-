<div class="container top">
	<div class="row">
		<div class="col-sm-3">
			<p style= "color: green;">
 			<%= flash[:success]  %>
			</p>
			<h2>User info</h2>
		<% if @books.user_id == current_user.id %>
			<%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
			<table class="table">
				<div  class="row">
				<tbody>
					<tr>
						<td class="labels col-xs-4">
						  name
						</td>
						<td class="labels col-xs-8">
						   <%= current_user.name %>
						</td>
					</tr>
					<tr>
						<td class="labels col-xs-4">
						  introduction
						</td>
						<td class="labels col-xs-8">
						  <%= current_user.introduction %>
						</td>
					</tr>
				</tbody>
			</div>
			</table>
			<div class="row">
			<%= link_to "", edit_user_path(current_user.id), class: "btn btn-default btn-block glyphicon glyphicon-wrench edit_user_#{@user}" %>
			</div>

		<% else %>

			<%= attachment_image_tag @books.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
			<table class="table">
			    <div  class="row">
			        <tbody>
				        <tr>
							<td class="labels col-xs-4">name
							</td>
							<td class="labels col-xs-8"><%= @books.user.name %>
							</td>
						</tr>
						<tr>
							<td class="labels col-xs-4">introduction
							</td>
							<td class="labels col-xs-8"><%= @books.user.introduction %>
						    </td>
						</tr>
				  	</tbody>
			  	</div>
			</table>
			<div class="row">
			<%= link_to "", edit_user_path(current_user.id), class: "btn btn-default btn-block glyphicon glyphicon-wrench edit_user_#{@user}" %>
			</div>

			<% end %>

<%= render 'users/list', book: @book %>

	<% if @books.user_id == current_user.id %>
		<div class="col-sm-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
				  <tr>
				  	<td class="col-xs-2">
				  		<%= attachment_image_tag @books.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", style: "width: 50px; height: 50px;" %>
						<br>
						<%= link_to @books.user.name, user_path(@books.user.id),class: "book_#{@books}" %>
					</td>
					<td class="col-xs-2">
						<%= @books.title %>
					</td>
					<td class="col-xs-2">
						<%= @books.opinion %>
					</td>
					<td class="col-xs-2">
						<%= link_to "Edit", edit_book_path, class: "btn btn-success btn-xs edit_book_#{@books}", style: "color: #fff; padding: 2px 10px;" %>
					</td>
					<td>
						<%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-xs destroy_book_#{@books} ", style: "color: #666; padding: 2px 10px;" %>
					</td>
				  </tr>
				</tbody>
			</table>
		</div>
	<% else %>
		<div class="col-sm-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td class="col-xs-2">
							<%= attachment_image_tag @books.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", style: "width: 50px; height: 50px;" %>
							<br>
							<%= link_to @books.user.name, user_path(@books.user.id),class: "book_#{@books}"%>
						</td>
						<td class="col-xs-2">
							<a href= "" book_path ><%= @books.title %></a>
						</td>
						<td><%= @books.opinion %></td>
					</tr>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
</div>
