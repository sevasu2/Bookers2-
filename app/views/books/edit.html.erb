<% if @books.user == current_user %>

<div class="container top">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">

<h1>Editing Book</h1>
<div class="row">

<%= form_for(@books) do |f| %>
	<div class="field">
		<label class="label-control">Title</label>
		<%= f.text_field :title, class: "form-control",class: "book_title" %>
	</div>
	<div class="field">
		<label>Opinion</label>
		<%= f.text_area :opinion, class: "form-control",class: "book_body"  %>
	</div>
	<div class="field">
		<%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
	</div>
<% end %>
</div>

<%= link_to "Show", book_path %>
|
<%= link_to "Back", books_path,class: "back" %>

<% else %>

<% end %>

		</div>
	</div>
</div>