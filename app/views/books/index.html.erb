<div class= "container top">
	<div class="row top">
		<div class="col-sm-3  top">
           <%= render 'users/list', book: @book %>
        </div>
		<div class="col-sm-9 top">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", style: "width: 50px; height: 50px;" %>
						</td>
						<td>
							<%= link_to book.title, book_path(book),class: "book_#{book}" %>
						</td>
						<td>
							<%= book.opinion %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
