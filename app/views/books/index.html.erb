<div class= "container top">
	<div class="row top">
		<div class="col-sm-3  top">
			<h2>User info</h2>
			<%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr><td class="labels col-xs-4">name</td><td class="labels col-xs-8"><%= current_user.name %></td></tr>
					<tr><td class="labels col-xs-4">introduction</td><td class="labels col-xs-8"><%= current_user.introduction %></td></tr>
				</tbody>
			</table>
			<div class="row">
			<%= link_to "", edit_user_path(current_user.id), class: "btn btn-default btn-block glyphicon glyphicon-wrench edit_current_user.id" %>
			</div>


<%= render 'users/list', book: @book %>

		<div class="col-sm-9 top">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr><th></th><th>Title</th><th>Opinion</th></tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr><td><%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", style: "width: 50px; height: 50px;" %></td><td><%= link_to book.title, book_path(book),class: "book_title" %></td><td><%= book.opinion %></td></tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
